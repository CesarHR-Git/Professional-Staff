<%-  include  ('templates/_header') -%>
<!-- BREADCRUMB -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb p-3">
        <li class="breadcrumb-item">
            <a href="/">Home <i class="fas fa-home"></i></a>
        </li>
        <li class="breadcrumb-item">
            <a href="/listView">List of professionals</a>
        </li>
        <li class="breadcrumb-item active">
            Add new professional
        </li>
    </ol>
</nav>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h3 class="text-center text-uppercase mt-3 mb-3">Add new professional</h3>
            <!-- FORMULARIO -->
            <form action="/add" method="POST">
                <div class="row">
                    <div class="form-group col-6">
                        <label>First name</label>
                        <input type="text" name="firstName" class="form-control" />
                    </div>
                    <div class="form-group col-6">
                        <label>Last name</label>
                        <input type="text" name="lastName" class="form-control" />
                    </div>
                    <div class="form-group col-6">
                        <label>Email</label>
                        <input type="email" name="email" class="form-control" />
                    </div>
                    <div class="form-group col-6">
                        <label>Mobile number</label>
                        <input type="tel" name="phone" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Resume</label>
                        <textarea name="resume" placeholder="Maximum 500 words..." class="form-control" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <label>URL Image</label>
                        <input type="text" name="url_image" class="form-control" />
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-lg" disabled="true">
                            Register
                        </button>
                    </div>
                </div>
            </form>
            <!-- /FORMULARIO -->
        </div>
    </div>
</div>
<br>
<!-- /SECTION -->
<%-  include  ('templates/_footer') -%>